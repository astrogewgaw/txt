}

@article{hurley-walkerRadioTransientUnusually2022,
  title = {A Radio Transient with Unusually Slow Periodic Emission},
  author = {{Hurley-Walker}, N. and Zhang, X. and Bahramian, A. and McSweeney, S. J. and O'Doherty, T. N. and Hancock, P. J. and Morgan, J. S. and Anderson, G. E. and Heald, G. H. and Galvin, T. J.},
