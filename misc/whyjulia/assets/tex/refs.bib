@article{bhattacharyyaLongtermStudyThree2018,
  title = {A {{Long-term}} Study of Three Rotating Radio Transients},
  author = {Bhattacharyya, B. and Lyne, A. G. and Stappers, B. W. and Weltevrede, P. and Keane, E. F. and McLaughlin, M. A. and Kramer, M. and Jordan, C. and Bassa, C.},
