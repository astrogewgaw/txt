  author = {Kumar, Pravir and Shannon, R. M. and Os{\l}owski, Stefan and Qiu, Hao and Bhandari, Shivani and Farah, Wael and Flynn, Chris and Kerr, Matthew and Lorimer, D. R. and Macquart, J.-P. and Ng, Cherry and Phillips, C. J. and Price, Danny C. and Spiewak, Ren{\'e}e},
