@article{settImagebasedSearchesPulsar2023,
  title = {Image-Based Searches for Pulsar Candidates Using {{MWA VCS}} Data},
  author = {Sett, S. and Bhat, N. D. R. and Sokolowski, M. and Lenc, E.},
  year = {2023},
