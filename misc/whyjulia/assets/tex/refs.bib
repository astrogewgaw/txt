@article{royMultipixelBeamformerUsing2012,
  title = {A Multi-Pixel Beamformer Using an Interferometric Array and Its Application towards Localisations of Newly Discovered Pulsars},
  author = {Roy, Jayanta and Bhattacharyya, Bhaswati and Gupta, Yashwant},
  year = {2012},
  month = nov,
  journal = {Monthly Notices of the Royal Astronomical Society: Letters},
  volume = {427},
  number = {1},
  eprint = {1209.3858},
  eprinttype = {arxiv},
