
@article{adamekSinglepulseDetectionAlgorithms2020,
  title = {Single-Pulse {{Detection Algorithms}} for {{Real-time Fast Radio Burst Searches Using GPUs}}},
  author = {Ad{\'a}mek, Karel and Armour, Wesley},
  year = {2020},
  month = apr,
  journal = {The Astrophysical Journal Supplement Series},
  volume = {247},
  pages = {56},
  issn = {0067-0049},
  doi = {10.3847/1538-4365/ab7994},
  abstract = {The detection of non-repeating or irregular events in time-domain radio astronomy has gained importance over the last decade due to the discovery of fast radio bursts. Existing or upcoming radio telescopes are gathering more and more data, and consequently, the software, which is an important part of these telescopes, must process large data volumes at high data rates. Data has to be searched through to detect new and interesting events, often in real time. These requirements necessitate new and fast algorithms that must process data quickly and accurately. In this work, we present new algorithms for single-pulse detection using boxcar filters. We have quantified the signal loss introduced by single-pulse-detection algorithms, which use boxcar filters, and based on these results, we have designed two distinct "lossy" algorithms. Our lossy algorithms use an incomplete set of boxcar filters to accelerate detection at the expense of a small reduction in detected signal power. We present formulae for signal loss, descriptions of our algorithms and their parallel implementation on NVIDIA GPUs using CUDA. We also present tests of correctness, tests on artificial data, and the performance achieved. Our implementation can process SKA-MID-like data 266\texttimes{} faster than real time on an NVIDIA P100 GPU and 500\texttimes{} faster than real time on an NVIDIA Titan V GPU with a mean signal power loss of 7\%. We conclude with prospects for single-pulse detection for beyond the SKA era, nanosecond time-resolution radio astronomy.},
  keywords = {1855,1858,1861,1883,1916,1957,1965,1969,293,Astrophysics - Instrumentation and Methods for Astrophysics},
  annotation = {ADS Bibcode: 2020ApJS..247...56A}
}

@article{aggarwalObservationalEffectsBanded2021,
  title = {Observational Effects of Banded Repeating {{FRBs}}},
  author = {Aggarwal, Kshitij},
  year = {2021},
  month = oct,
  journal = {The Astrophysical Journal Letters},
  volume = {920},
  number = {1},
  eprint = {2108.04474},
  eprinttype = {arxiv},
  primaryclass = {astro-ph},
  pages = {L18},
  issn = {2041-8205, 2041-8213},
  doi = {10.3847/2041-8213/ac2a3a},
  abstract = {Recent observations have shown that repeating Fast Radio Bursts (FRBs) exhibit band-limited emission, whose frequency-dependent amplitude can be modeled using a Gaussian function. In this analysis, we show that banded emission of FRBs can lead to incompleteness across the observing band. This biases the detected sample of bursts and can explain the various shapes of cumulative energy distributions seen for repeating FRBs. We assume a Gaussian shape of the burst spectra and used simulations to demonstrate the above bias using an FRB 121102-like example. We recovered energy distributions that showed a break in power-law and flattening of power-law at low energies, based on the fluence threshold of the observations. We provide recommendations for single-pulse searches and analysis of repeating FRBs to account for this incompleteness. Primarily, we recommend that burst spectra should be modeled to estimate the intrinsic fluence and bandwidth of the burst robustly. Also, bursts that lie mainly within the observing band should be used for analyses of energy distributions. We show that the bimodality reported in the distribution of energies of FRB 121102 by Li et al. (2021) disappears when burst bandwidth, instead of the center frequency of the observation, is used to estimate energy. Sub-banded searches will also aid in detecting band-limited bursts. All the analysis scripts used in this work are available in a Github repository.},
  archiveprefix = {arXiv},
  keywords = {Astrophysics - High Energy Astrophysical Phenomena,Astrophysics - Instrumentation and Methods for Astrophysics},
  file = {/home/upanda/Zotero/storage/SHPWLTCA/2108.html}
}

@article{aggarwalVLARealfastDetection2020,
  title = {{{VLA}}/{{Realfast Detection}} of a {{Burst}} from {{FRB}} 180916.{{J0158}}+65 and {{Tests}} for {{Periodic Activity}}},
  author = {Aggarwal, Kshitij and Law, Casey J. and {Burke-Spolaor}, Sarah and Bower, Geoffrey and Butler, Bryan J. and Demorest, Paul and Linford, Justin and Lazio, T. J. W.},
  year = {2020},
  month = jun,
  journal = {Research Notes of the American Astronomical Society},
  volume = {4},
  pages = {94},
  issn = {2515-5172},
  doi = {10.3847/2515-5172/ab9f33},
  abstract = {We report on the detection of a burst from FRB 180916 by realfast/Very Large Array and present software for interpreting fast radio bursts (FRB) periodicity. We demonstrate a range of periodicity analyses with bursts from FRB 180916, FRB 121102 and FRB 180814. Our results for FRB 180916 and FRB 121102 are consistent with published results. For FRB 180814, we did not detect any significant periodic episodes. The realfast-detected and other high-frequency bursts for FRB 180916 tend to lie at the beginning of the activity window, indicating a possible phase-frequency relation. The python package frbpa can be used to reproduce and expand on this analysis to test models for repeating FRBs.},
  keywords = {1339,2008,739,Astrophysics - High Energy Astrophysical Phenomena},
  annotation = {ADS Bibcode: 2020RNAAS...4...94A}
}

@article{aiTrueFractionsRepeating2021,
  title = {On the {{True Fractions}} of {{Repeating}} and {{Nonrepeating Fast Radio Burst Sources}}},
  author = {Ai, Shunke and Gao, He and Zhang, Bing},
  year = {2021},
  month = jan,
  journal = {The Astrophysical Journal Letters},
  volume = {906},
  number = {1},
  pages = {L5},
  publisher = {{The American Astronomical Society}},
  issn = {2041-8205},
  doi = {10.3847/2041-8213/abcec9},
  abstract = {Observationally, fast radio bursts (FRBs) can be divided into repeating and apparently nonrepeating (one-off) ones. It is unclear whether all FRBs repeat and whether there are genuine nonrepeating FRBs. We attempt to address these questions using Monte Carlo simulations. We define a parameter Tc at which the accumulated number of nonrepeating sources becomes comparable to the total number of repeating sources, which is a good proxy to denote the intrinsic repeater fraction among FRBs. Assuming that both types of sources exist and their burst energies follow power-law distributions, we investigate how the observed repeater fraction evolves with time for different parameters. If the lifetime of repeaters is sufficiently long that the evolutionary effect can be neglected within the observational time span, unless Tc \textrightarrow{} {$\infty$} (i.e., there is no genuine nonrepeating FRB source), the observed repeater fraction should increase with time first, reach a peak, and then decline. The peak time Tp and peak fraction Fr,obs,p depend on Tc and other repeating rate parameters. With the current data, we pose a lower limit Tc {$>$} 0.1 day for reasonable parameter values. We predict that future continuous monitoring of FRBs with CHIME or similar wide-field radio telescopes would obtain an Fr,obs less than 0.04. The detection of a smaller peak value Fr,obs,p {$<$} 0.04 in the near future would disfavor the ansatz that ``all FRB sources repeat.''},
  langid = {english}
}

